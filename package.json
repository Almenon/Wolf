{
  "name": "wolf",
  "displayName": "Wolf",
  "description": "Python live scratchpad",
  "version": "0.1.4",
  "publisher": "traBpUkciP",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": ["Debuggers", "Other"],
  "activationEvents": ["onCommand:wolf.barkAtCurrentFile"],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "wolf.barkAtCurrentFile",
        "title": "Wolf: Set the Wolf on the current file.",
        "icon": {
          "light": "./media/wolf-dark-blue.png",
          "dark": "./media/wolf-dark-blue.png"
        }
      },
      {
        "command": "wolf.stopBarking",
        "title": "Wolf: Stops all running Wolf sessions.",
        "icon": {
          "light": "./media/wolf-red.png",
          "dark": "./media/wolf-red.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "wolf.stopBarking",
          "when": "inWolfContext",
          "group": "navigation"
        },
        {
          "command": "wolf.barkAtCurrentFile",
          "when": "editorLangId == python && !inWolfContext",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "url": "https://github.com/Duroktar/Wolf"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#6495ed"
  },
  "build": {
    "extraResources": "scripts"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "ext:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "electron": "^1.7.12",
    "electron-rebuild": "^1.7.3",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vsce": "^1.36.3",
    "vscode": "^1.0.0"
  }
}
